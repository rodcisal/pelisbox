<%- model_class = Pelicula -%>
<div class="page-header">
  <h1 id="pelisbox">PelisBox</h1>
</div>
<div class="container">
    <% @peliculas.each do |pelicula| %>
      <div class="view view-first">
          <%= raw pelicula.imagen %>
          <div class="mask">
	          <h2><%= pelicula.titulo %></h2>
	          <p><%= pelicula.descripcion %></p>
	        </div>
      </div>
      <% end %>
</div>

