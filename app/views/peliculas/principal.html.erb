<%- model_class = Pelicula -%>
<div class="page-header">
  <h1 id="pelisbox">PelisBox</h1><h3>Comparte esta web con tus amigos</h3> <div class="fb-like" data-href="http://www.pelisbox.net" data-send="true" data-width="450" data-show-faces="true"></div>
</div>
<div class="container">
    <% @peliculas.each do |pelicula| %>
      <div class="view view-first">
          <%= raw pelicula.imagen %>
          <div class="mask">
	          <h2><%= link_to "#{pelicula.titulo}", pelicula_path(pelicula) %></h2>	
	        </div>
      </div>
      <% end %>
</div>

